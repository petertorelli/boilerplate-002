extends /top

block title
	title Resend Activation

block action
	h2 Please enter your email address.
	p.
		An email will be sent to you with a link that you can use to 
		activate your account.
	form(action='resend' method='post')
		label Email address
		input(type='email' name='email' required).form-control
		button(type='submit').btn.btn-primary Resend
