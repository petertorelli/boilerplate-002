extends /top

block title
  title Change Password

block action
  h2 Change Password
  form(action='change' method='post')
    label(for='password') Password
    input(
      required
      type='password'
      name='password'
      maxlength=30
    ).form-control
    label(for='repassword') Re-enter password
    input(
      required
      type='password'
      name='repassword'
      maxlength=30
    ).form-control
    button(type='submit').btn.btn-primary Change
